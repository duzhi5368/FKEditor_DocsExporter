func _ready():
	bool_reference = _bool_variable as BoolVariable
	pressed = bool_reference.value
	_toggle_text()
# ------------------------------------------------------------------------------
func _toggled(button_pressed):
	bool_reference.value = button_pressed
	_toggle_text()
